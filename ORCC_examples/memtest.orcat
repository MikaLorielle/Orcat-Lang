pub fn allocate_and_free() <void> {
    int* ptr;
    ptr = malloc(8);  // allocate 8 bytes
    *ptr = 42;
    print("Value assigned.");newline();
    deref(ptr);       // this will free the pointer
    // ptr is now invalid â€” use-after-deref is not allowed
}

pub fn main() <int> {
    allocate_and_free();
    return 0;
}
